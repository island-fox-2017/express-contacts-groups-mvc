<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Contacts</title>
  </head>
  <body>
    <table border="1px">
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Company</th>
        <th>Number Telp</th>
        <th>email</th>
        <th>ACTION</th>
      </tr>
      <% dataKontak.forEach(d => { %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name %></td>
        <td><%= d.company %></td>
        <td><%= d.number_telp %></td>
        <td><%= d.email %></td>
        <td><a href="/contacts/edit/<%= d.id %>">Edit</a> | <a href="/contacts/delete/<%= d.id %>">Delete</a> | <a href="/contacts/addresses/<%= d.id %>">Show addresses</a></td>
      </tr>
      <% }) %>
    </table>
    <br>
    <form action="/contacts" method="post">
      <input type="text" name="name" placeholder="name"><br>
      <input type="text" name="company" placeholder="company"><br>
      <input type="text" name="number_telp" placeholder="number telp"><br>
      <input type="text" name="email" placeholder="email"><br>
      <input type="submit" name="submit" value="SUBMIT">
    </form>
    <br><a href="/">back</a>
    <br><%= JSON.stringify(dataContacts[0]) %></br>
  </body>
</html>
