<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Contact Page</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <h1><i class="fa fa-address-book"> My Contacts </i></h1>
    <button id="btn-start"><i class="fa fa-plus"> Add</i></button>
    <button id="btn-start" onclick="window.location='/'"><i class="fa fa-arrow-left"> Back</i></button>

    <div id="div1" class="modal">
      <form id="main-form" class="modal-content animate" name="mainForm" action="/contacts" method="post">
        <div class="container">
          <label><b>First Name</b></label>
          <input type="text" name="first_name" placeholder="Type your first_name" />
          <label><b>Last Name</b></label>
          <input type="text" name="last_name" placeholder="Type your last_name" />
          <label><b>Company</b></label>
          <input type="text" name="company" placeholder="Type your company name" />
          <label><b>No. Phone</b></label>
          <input type="text" name="telp_number" placeholder="Type your phone number" />
          <label><b>Email</b></label>
          <input type="email" name="email" placeholder="Type your email" />
          <div class="clearfix">
            <button id="cancelbtn" type="button" class="cancelbtn">Cancel</button>
            <button type="submit" name="submit" value="submit" class="submitbtn">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <div>
      <table border="1">
        <tr>
          <th>ID CONTACT</th>
          <th>FIRST NAME</th>
          <th>LAST NAME</th>
          <th>COMPANY</th>
          <th>No. PHONE</th>
          <th>EMAIL</th>
          <th>ACTION</th>
        </tr>
        <% data.forEach(d => {%>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.first_name %></td>
            <td><%= d.last_name %></td>
            <td><%= d.company %></td>
            <td><%= d.telp_number %></td>
            <td><%= d.email %></td>
            <td><a href='contacts/edit/<%= d.id %>'><i class="fa fa-pencil"> Edit</i></a> || <a href='contacts/delete/<%= d.id %>'><i class="fa fa-eraser"> Delete</i></a> || <a href='contacts/detail_profile/<%= d.id %>'><i class="fa fa-user"> Profile</i></a> || <a href='contacts/detail_address/<%= d.id %>'><i class="fa fa-address-book"> Address</i></a> || <a href='contacts/details/<%= d.id %>'><i class="fa fa-group"> Group</i></a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
