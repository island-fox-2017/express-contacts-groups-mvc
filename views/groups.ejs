<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups Page</title>
  </head>
  <body>
    <div class="form_data">
        <h3>Tambah Data Groups</h3>
        <form class="" action="/insert_groups" method="post">
          <p>Input Nama Groups :</p>
          <input type="text" name="nameGroups" value="" ><br>
          <button type="submit" name="button">Submit</button>
        </form>
    </div>

    <div class="table_data">
      <form class="" action="/groups" method="post">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Groups Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% group_data.forEach(groupi => { %>
              <tr>
                <td> <%= groupi.id %></td>
                <td> <%= groupi.name_of_group %></td>
                <td> <a href="/groups/edit/<%= groupi.id %>">Edit</a> <a href="/groups/delete/<%= groupi.id %>">Delete</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>
